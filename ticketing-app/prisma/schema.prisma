generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String
  priority    Int
  progress    Int
  status      String
  active      Boolean
  createdAt   DateTime @default(now())
  // userId      String  @map("user_id")
